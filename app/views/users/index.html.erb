	
<div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
              	<th></th>

                <th>User Name</th>
                <th>Email</th>
                <th>Phone Number</th>            
              </tr>
            </thead>

             <tbody>
				<% @users.each do |user| %>

                	<tr>
                		<td><%= image_tag user.avatar (:medium) %></td>
                		<td><%= user.name %> <%=user.last_name %></td>
                		<td><%= user.email %></td>
                		<td><%= number_to_phone(user.phonenumber) %></td>
                  
                	</tr>

  				<% end %>
            </tbody>
          </table>
 </div>


