<div class="container"> 

<h1><%= image_tag 'discussion.png' %> Discussion Board</h1>
<% if user_signed_in? %>
		<%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
	<% end %>
	<div class="table-response">
		<table class="table table-striped table-hover">
				<thead>
					<th>Thread Topic</th>
					<th>Replies</th>
					<th>Published</th>
					<th>Author</th>
					<th></th>
				</thead>
			<tbody>
				<% @posts.each do |post| %>
				<tr>
					<td><%= link_to post.title, post %></td>
					<td><%= post.responses.count %></td>
					<td><%= time_ago_in_words(post.created_at) %> ago</td>
					<td><%= image_tag(post.user.avatar.url(:thumb), class: "tiny") %> | <%= post.user.name %> <%= post.user.last_name %>

					</td>
				<% end %>
				</tr>
			</tbody>
		</table>
	</div>
	
</div>