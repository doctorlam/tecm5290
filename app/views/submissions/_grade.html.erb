<div class="row">
<h1>Grade Assignment</h1>
      <div class="col-md-8">
      <div class="third-form-group">
      <%= simple_form_for @submission do |f| %>

        <%= f.label :score %><br>
        <%= f.number_field :score %> out of <% for assignment in @submission.assignments %> <%= assignment.score %><% end %>
        <br>
        
        <%= f.label :feedback, 'Instructor Feedback' %><br>
        <%= f.text_area :feedback, class: "form-control", rows: "10" %>
       
        <% if @submission.image.exists? %>
          "<%= @submission.image.original_filename %>" is already attached. Upload file to replace.<br/>
          <%= f.check_box :delete_image %>Delete
        <% end %>
        <%= f.label :attachment %>
        <%= f.file_field :image, :class => "form-control-file", class: "form-control" %>
      

      <%= f.submit "Submit Assignment", class: "btn btn-primary" %> 

    <% end %>
    </div>
  </div>
</div><!--col-md-8--> 
